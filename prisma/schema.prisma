// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Issue {
  id        Int      @id @default(autoincrement())
  repo      String   // Format: owner/repository-name
  githubId  BigInt   // GitHub's issue ID (can exceed 32-bit int)
  title     String
  body      String?
  htmlUrl   String
  createdAt DateTime

  @@unique([repo, githubId])
  @@index([repo])
}

// Track progressive scan progress for rate-limited fetching
model ScanProgress {
  id            Int       @id @default(autoincrement())
  repo          String    @unique // Format: owner/repository-name
  status        String    // 'pending' | 'in_progress' | 'completed' | 'failed'
  totalPages    Int?      // Estimated total pages (updated as we scan)
  currentPage   Int       @default(0)
  issuesFetched Int       @default(0)
  cursor        String?   // GraphQL pagination cursor
  startedAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  errorMessage  String?
  nextRetryAt   DateTime? // When to retry after rate limit hit
}
